{%- layout none -%}

<title>{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

<!-- /templates/404.liquid -->
<div class="container">
  <header class="page-header">
    <h1 {% if settings.enable_multilang %}data-translate="general.404.title"{%endif%}>
      {{ 'general.404.title' | t }}
    </h1>
  </header>
  <p>
    <span {% if settings.enable_multilang %}data-translate="general.404.subtext_html"{%endif%}>
      {{ 'general.404.subtext_html' | t }}
    </span>
    <a {% if settings.enable_multilang %}data-translate="general.404.click_here"{%endif%} href="/collections/all">
      {{ 'general.404.click_here' | t }}
    </a>
    <span {% if settings.enable_multilang %}data-translate="general.404.continue_shopping"{%endif%}>
      {{ 'general.404.continue_shopping' | t }}
    </span>
  </p>
</div>
