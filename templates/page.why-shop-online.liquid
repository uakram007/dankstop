        </ul>
      </section>
      {%- if blogs.wiki.all_tags.size > 0 -%}
      <section>  
        <h4>{{- 'blogs.sidebar.categories' | t -}}</h4>
        <ul>
          {%- for tag in blogs.wiki.all_tags -%}
            {%- if current_tags contains tag -%}
            <li>{{- tag -}}</li>
            {%- else -%}
            <li>{{- tag | link_to_tag: tag | replace: '/pages/why-shop-at-an-online-smoke-shop/', '/blogs/wiki/tagged/' -}}</li>
