{%- if price_for_plan == blank -%}
{%- assign price_for_plan = product.selected_or_first_available_variant.price | replace: '$', '' | replace: ',', ''  | replace: ' USD', '' | strip | split: ' ' | first -%}
{%- endif -%}
{%- assign payment_plan__max_price = settings.payment_plan__max_price -%}

{%- if settings.product__payment_program == "viabill" -%}
  {%- if settings.viabill__widget_delivery == "manual" -%}
    {%- assign decimal_price = price_for_plan | money_without_currency | abs -%}
    {%- if decimal_price <= payment_plan__max_price -%}
      {%- assign viabill_monthly_price = price_for_plan | divided_by: 4.00 | round: 2  | money_without_currency -%}
      <div class="viabill-custom pay-plan-price" data-product-price="{{ price_for_plan | money }}">
        <span class="vb-badge">
          only <span class="vb-price-currency">$</span><span class="vb-price">{{ viabill_monthly_price }}</span> / month with
        </span>
        <svg class="vb-icon icon-vb-logo"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#vbLogo"></use></svg>
        <svg class="vb-icon icon-arrow"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#chevronRight"></use></svg>
        <div class="vb-no-fee">No interest</div>
      </div>
    {%- endif -%}
  {%- else -%}
    {%- include 'viabill-pricetag' -%}
  {%- endif -%}
