  {%- if settings.favicon != blank -%}
  <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {%- endif -%}
  <link rel="manifest" href="{{ 'manifest.json' | asset_url | split: '?' | first }}">
  <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url | split: '?' | first }}"/>
  <link rel="icon" href="{{ 'favicon.png' | asset_url | split: '?' | first }}" type="image/png" />
