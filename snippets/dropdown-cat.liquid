<ul class="dropdown-cat">
  {% for link_child_item in linklists[link_child].links %}
  <li {% if linklists[link_child_item.handle] != empty %}class="dropdown{% if collection.handle == link_child_item.handle %} active{% endif %}"{% endif %}>
    <a href="{{ link_child_item.url }}"{% if collection.handle == link_child_item.handle %}class="active"{% endif %}>
      {% include 'multilang' with link_child_item.title %}
    </a>
    
    {% if linklists[link_child_item.handle] != empty %}
    <span class="icon-dropdown">
      <i class="fa fa-angle-down"></i>
    </span>
    {% assign link_child = link_child_item.handle %}
    {% include 'dropdown-cat' with link_child %}
    {% endif %}
  </li>
  {% endfor %}
</ul>