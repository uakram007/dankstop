{%- comment %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
  {%- for faq in collection_faqs %}
    {%- assign faq_key = faq | first -%}
    {%- assign faq_value = faq | last -%}
    {%- assign faq_question = faq_value | split: ' ## ' | first -%}
    {%- assign faq_answer = faq_value | split: ' ## ' | last -%}
    {
      "@type": "Question",
      "name": "{{ faq_question }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ faq_answer }}"
      }
    }{% unless forloop.last %},{% endunless %}
  {%- endfor %}
  ]
}
</script>
{%- endcomment %}
{% comment %} {%- assign collection_faqs = collection.metafields.faq -%}
{%- if collection_faqs != blank %}
<script type="application/ld+json">{"@context":"https://schema.org","@type":"FAQPage","mainEntity":[{%- for faq in collection_faqs %}{%- assign faq_key = faq | first -%}{%- assign faq_value = faq | last -%}{%- assign faq_question = faq_value | split: ' ## ' | first -%}{%- assign faq_answer = faq_value | split: ' ## ' | last -%}{"@type":"Question","name":"{{ faq_question }}","acceptedAnswer":{"@type":"Answer","text":"{{ faq_answer }}"}}{% unless forloop.last %},{% endunless %}{%- endfor %}]}</script>
{%- endif %} {% endcomment %}