{%- include 'product-grid-item' -%}

{%- comment -%}
{%- assign on_sale = false -%}
{%- if product.compare_at_price_min > product.price_min -%}
{%- assign on_sale = true -%}
{%- endif -%}

{%- assign sold_out = true -%}
{%- if product.available  -%}
{%- assign sold_out = false -%}
{%- endif -%}

<!-- new product -->
{%- assign custom_label = false -%}

{%- for tag in product.tags -%}
{%- assign tag_handle = tag | handle -%}
{%- if tag_handle == 'label' -%}
{%- assign custom_label = true -%}
{%- endif -%}
{%- endfor -%}

<div class="suppermarket-product-item inner product-item{% if sold_out %} sold-out{% endif %}{% if on_sale %} on-sale{% endif %}" data-product-id="product-{{ product.id }}">
  <div class="inner-top">
    <div class="product-top">
      <div class="product-image{% if product.images.size > 1 and settings.image_swap %} image-swap{% endif %}">
        <a href="{{ product.url | within: collection }}" class="product-grid-image" data-collections-related="/collections/{{collection.handle}}?view=related">

          {%- comment -%}
          {%- assign img_pr = product.featured_image.src | product_img_url: '800x' -%}
          {%- assign img_pr_1 = product.featured_image.src | product_img_url: '300x' -%}
          {%- assign img_pr_2 = product.featured_image.src | product_img_url: '400x' -%}

          {%- assign img_0 = product.images[0].src | product_img_url: '800x' -%}
          {%- assign img_01 = product.images[0].src | product_img_url: '300x' -%}
          {%- assign img_02 = product.images[0].src | product_img_url: '400x' -%}

          {%- assign img_1 = product.images[1].src | product_img_url: '800x' -%}
          {%- assign img_11 = product.images[1].src | product_img_url: '300x' -%}
          {%- assign img_12 = product.images[1].src | product_img_url: '400x' -%}

          {%- assign img_1_alt = product.images[0].alt | escape -%}
          {%- if img_1_alt == blank -%}
          {%- assign img_1_alt = product.title -%}
          {%- endif -%}
          {%- endcomment -%}

          {%- assign img_widths = '168,335,420,460' -%}

          {%- if product.images.size > 1 and settings.image_swap -%}

          {%- comment -%}
          {%- assign img_2_alt = product.images[1].alt | escape -%}
          {%- if img_2_alt == blank -%}
          {%- assign img_2_alt = product.title -%}
          {%- endif -%}
          <img 
               src="{{ lazyload_placeholder }}"
               class="images-one lazyload"
               {%- comment -%}
               {%- if lazyload_pgi -%}
               src="{{ lazyload_placeholder }}"
               class="images-one lazyload"
               {%- else -%}
               src="{{ product.images[0].src | product_img_url: pgi_img_width_x }}" 
               class="images-one"
               {%- endif -%}
               {%- endcomment -%}
               alt="{{ img_1_alt }}"
               data-src="{{ img_0 }}"
               data-srcie="{{ img_01 }}"
               data-srcief="{{ img_02 }}"
               data-widths="[{{ img_data_widths }}]"
               data-aspectratio="{{ product.featured_image.aspect_ratio }}"
               data-sizes="auto">

          <span class="images-two">
            {%- comment -%}
            src="{{ lazyload_logo_placeholder }}"
            {%- endcomment -%}
            <img src="{{ lazyload_placeholder }}"
                 class="lazysizes lazyload"
                 alt="{{ img_2_alt }}"
                 data-src="{{ img_1 }}"
                 data-srcie="{{ img_11 }}"
                 data-srcief="{{ img_12 }}"
                 data-widths="[{{ img_data_widths }}]"
                 data-aspectratio="{{ product.featured_image.aspect_ratio }}"
                 data-sizes="auto">
          </span>
          {%- endcomment -%}

          {%- include 'image-module', im_src: product.images[0], im_dt_ws: img_widths, im_iep: 'data-expand="-1"' -%}
          {%- if settings.image_swap and product.images.size > 1  -%}
          <span class="images-two">
            {%- include 'image-module', im_src: product.images[1], im_dt_ws: img_widths, im_iep: 'data-expand="-1"' -%}
          </span>
          {%- endif -%}

          {%- else -%}

          {%- comment -%}
          <img 
               src="{{ lazyload_placeholder }}"
               class="images-one lazyload"
               {% comment %}
               {% if lazyload_pgi %}
               src="{{ lazyload_placeholder }}"
               class="images-one lazyload"
               {% else %}
               src="{{ product.featured_image.src | product_img_url: pgi_img_width_x }}" 
               {% endif %}
               {% endcomment %}
               alt="{{ img_1_alt }}"
               data-src="{{ img_pr }}"
               data-srcie="{{ img_pr_1 }}"
               data-srcief="{{ img_pr_2 }}"
               data-widths="[{{ img_data_widths }}]"
               data-aspectratio="{{ product.featured_image.aspect_ratio }}"
               data-sizes="auto">
          {%- endcomment -%}

          {%- include 'image-module', im_src: product.images[0], im_dt_ws: img_widths, im_iep: 'data-expand="-1"' -%}

          {%- endif -%}

        </a></div>

      {%- if on_sale or sold_out or custom_label -%}
      <div class="product-label">
        {%- unless section.settings.countdown != blank -%}
        {%- if on_sale -%}
        <strong class="label sale-label">
          {{- 'products.product.sale' | t -}}
        </strong><br>
        {%- endif -%}
        {%- endunless -%}

        {%- if sold_out -%}
        <strong class="label sold-out-label">
          {{- 'products.product.sold_out' | t -}}
        </strong><br>
        {%- endif -%}

        {%- if custom_label -%}
        <strong class="label custom-label">
          {{- 'products.product.custom_label' | t -}}
        </strong>
        {%- endif -%}
      </div>
      {%- endif -%}

      {%- comment -%}
      <div class="product-des abs-center">
        {%- include 'wishlist-product' -%}

        {%- if settings.display_button -%}
        <div class="action">
          {%- assign variantCount = product.variants | size -%}
          <form action="/cart/add" method="post" class="variants" data-id="product-actions-{{ product.id }}" enctype="multipart/form-data">
            {%- if sold_out -%}
            <button class="btn add-to-cart-btn" type="submit" disabled="disabled">
              {{- 'products.product.unavailable' | t -}}
            </button>
            {%- else -%}
            {%- if variantCount > 1 -%}
            <a class="btn" href="{{ product.url }}" title="{{ product.title }}">
              {{- 'products.product.select_options' | t -}}
            </a>
            {%- else -%}
            <input type="hidden" name="id" value="{{ product.variants[0].id }}" /> 

            <button data-btn-addToCart class="btn add-to-cart-btn" type="submit">
              {{- 'products.product.add_to_cart' | t -}}
            </button>
            {%- endif -%}
            {%- endif -%}
          </form></div>
        {%- endif -%} 
      </div>

      {%- if settings.display_item_size or settings.enable_quick_view -%}
      <div class="product-des abs-bottom">
        {%- if settings.display_item_size -%}
        {%- include 'items-size' -%}
        {%- endif -%}

        {%- if settings.enable_quick_view -%}
        <a class="quickview-button" href="javascript:void(0)" data-product-handle="{{ product.handle }}" title="{{ 'products.product.quick_view' | t }}"><span>
          {{- 'products.product.quick_view' | t -}}
          </span></a>
        {%- endif -%}
      </div>   
      {%- endif -%}
      {%- endcomment -%}

    </div>

    <div class="product-bottom">
      {%- if settings.show_vendor -%}
      <div class="product-vendor">
        {{- product.vendor | link_to_vendor -}}
      </div>
      {%- endif -%}

      <a class="product-title" href="{{ product.url | within: collection }}">
        {%- include 'multilang' with product.title -%}
      </a>


      {%- include 'product-reviews', reviewed_item: product -%}


      <div class="price-box">
        {%- if on_sale -%}
        <div class="price-sale"><span class="old-price">
          {{- product.compare_at_price_min | money -}}
          </span>
          <span class="special-price">
            {{- product.price_min | money -}}
          </span></div>

        {%- if section.settings.countdown != blank -%}
        <div class="price-saving"><span class="price-save">-{{ product.variants[0].compare_at_price | minus: product.variants[0].price | times: 100.0 | divided_by: product.variants[0].compare_at_price | money_without_currency | times: 100 | replace: '.0', '' }}%</span></div>
        {%- endif -%}
        {%- else -%}

        <div class="price-regular"><span>{%- if product.price_varies -%}{%- include 'varies_from' -%}{%- endif -%}{{ product.price_min | money }}</span></div>
        {%- endif -%}
      </div>

      {%- comment -%}
      Payment plan - ViaBill or Sezzle
      {%- endcomment -%}
      {%- include 'product-grid-item-payment-plan' -%}


      {%- comment -%}
      {%- if settings.display_product_reviews -%}
      <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
      {%- endif -%}
      {%- endcomment -%}

      {%- comment -%}
      Product warranty eligibility
      {%- endcomment -%}
      {%- include 'product-warranty-eligibility' -%}


      {%- comment -%}
      {%- if settings.display_item_swatch -%}
      {%- include 'item-swatch' -%}
      {%- endif -%}
      {%- endcomment -%}

    </div>
  </div>
</div>
{%- endcomment -%}