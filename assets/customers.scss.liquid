.wrapper-login-customer {
    .wrapper-content {
        @include flexbox();
        @include flex-wrap(wrap);
        position: relative;
        border-bottom: 1px solid $border_bt_sidebar;
        padding-bottom: 78px;
        
        .col-left {
            -webkit-box-flex: 0;
            -ms-flex: 0 0 calc(50% - 10px);
            flex: 0 0 calc(50% - 10px);
            @include calc(max-width, '50% - 10px');
            
            > * {
                padding-right: 42px;
            }
        }
        
        .col-right {
            -webkit-box-flex: 0;
            -ms-flex: 0 0 calc(50% + 10px);
            flex: 0 0 calc(50% + 10px);
            @include calc(max-width, '50% + 10px');
            
            > * {
                padding-left: 42px;
                padding-right: 42px;
            }
            
            .wrapper-title ~* {
                margin-left: 15px;
            }
        }
        
        &:after {
            position: absolute;
            content: "";
            bottom: 40px;
            @include calc(height, '100% - 40px - 20px - 49px');
            width: 1px;
            background-color: $border_bt_sidebar;
            left: 50%;
            @include translateX(-10px);
        }
    }
    
    .col-left + .custom-or-abs {
        position: absolute;
        top: 25%;
        left: 50%;
        @include translateX(-30px);
        z-index: 2;
        background-color: $body_bg;
        padding: 10px 0;       
    }


    .social-login-cont {
      max-width: 380px;
      padding: 0;
    }
    .custom-or-abs {
      .or_text {
          text-transform: uppercase;
          border: 1px solid #ccc;
          min-width: 42px;
          min-height: 42px;
          text-align: center;
          @include border-radius(21px);
          padding: 11px 5px 9px;
          display: block;      
      }
    }
    .returning-customer .custom-or-abs {
      position: relative;
      z-index: 2;
      margin: 20px 0;
      
      .or_text {
        width: 42px;
        margin: 0 auto;
        background: #fff;
        position: relative;
        
        &:after {
          content: "";
          width: 160%;
          height: 6px;
          background: #fff;
          display: block;
          position: absolute;
          top: 19px;
          left: -13px;
          z-index: -1;
        }
      }
    }
    #customer_login { 
      position: relative;
      margin: 30px 0 0;
      
      &:after {
        position: absolute;
        content: "";
        top: -50px;
        width: 95%;
        height: 1px;
        background-color: #e6e6e6;
        z-index: 1;
      }
    }

    #recover_password {
        div {
            &:first-child {
                margin-bottom: 25px;
            }
        }
        
        .action-btn {
            span,
            a {
                display: inline-block;
                padding-top: 8px;
                padding-bottom: 6px;
                margin-bottom: 25px;
                vertical-align: middle;
                padding-left: 8px;
            }
        }
    }
}



@media (max-width: 767px) {

  .wrapper-login-customer {
        #customer_login:after,
        .custom-or-abs {
