/*============================================================================
  # DankBlog Articles
==============================================================================*/
.main-content {
  position: relative;
}

.dankblog_header {
  padding-top: 30px;
  padding-bottom: 30px;

  @include at-query ($min, $desktop) {    
/*     height: 70px; */
    > * {
      height: 100%;
    }
  }
  
  > .row {
    @include justify-content(center);
    position: relative;
    @include at-query ($min, $desktop) {    
      @include justify-content(space-between);
    }
  }
  
  #dankblog_logo, 
  .dankblog_logo {
    @include flexbox();
    @include align-items(center);
    
/*     @media screen and (min-width: 769px) {
      max-width: 200px;
    }
 */
    a {
      margin: 0 auto;
    }

    h1 {
      position: relative;
      font-size: 26px;
      font-weight: lighter;
      margin: 0px;

      .title-dank {
        font-weight: bold;
        color: #39b54a;
      }
      .page-tag {
        display: inline-block;
        font-size: 12px;
        line-height: 1;
        position: absolute;
        left: 0;
        bottom: -5px;
      }
    }
  }

  .blog-nav {
    @include flexbox();
    @include align-items(center);
    @include justify-content(space-between);
    margin: 0px;

    li {
      height: 100%;
      margin: 0;
      font-size: 17px;
      cursor: pointer;
      @include flexbox();
      @include align-items(center);
      @include justify-content(center);

      a {
        display: table-cell;
        vertical-align: middle;
      }
      
      &.active, &:hover {
        &:after {
          content: " ";
          display: block;
          position: absolute;
          width: 100%;
          bottom: -3px;
          border-bottom: 5px solid #39b54a !important;
        }
      }

    }

  }

  #article_search_icon {
    -webkit-appearance: none;
    -moz-appearance: none;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    max-height: 100%;
    cursor: pointer;
    padding-top: 8px;
    padding-bottom: 0;
  }

}

  
.list_of_articles,
.articles-list {

  .individual_article {
    margin-top: 30px;
    @include prefix(animation, fadein 1730ms);

    * {
      color: #353535;
    }

    img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    > .article_post_date, > h2 {
      text-align: center;
    }

    .article_post_date {
      font-size: 0.8em;
      margin-top: 15px;
      
      p {
        margin-bottom: 5px;
      }
    }

    h2 {
      -webkit-font-smoothing: antialiased;
      line-height: 1.1;
      font-size: 1.1em;
    }
    
    .article_excerpt {
      font-size: 0.8em;
    }
    
    .read_more_link {
      text-transform: lowercase;
      text-decoration: underline;
      font-size: 14px;
    }
    
    &.col-12 { 

      > a {
        width: 100%;
        position: relative;
        display: block;
      }

      img {
        height: 300px;
      }

      > ul {
        display: none;
      }

      h2 {
        position: absolute;
        z-index: 1;
        max-width: calc(50% - 20px);
        top: 10px;
        left: 10px;
        background: $colorPrimary; 
        color: #fff;
        padding: 7px 10px;
        font-size: 2.5em;
/*         line-height: 1.5; */
      }

      .article_post_date, .article_excerpt, .article_tags, .read_more_link {
        display: none;
      }
    }

  }

}


