<style>
  main {
        font-family: 'Montserrat', sans-serif;
        *{
            font-family: 'Montserrat', sans-serif !important;
        }
    }
  .mbl{
      display: none;
    }
  @media only screen and (max-width: 768px) {
    .desktop{
      display: none;
    }
    .mbl{
      display: flex;
      max-width: 170px;
        margin: 0 auto;
    }


    .cc-mm-instant-saving-free-row .page-width {
    padding: 0 !important;
}



  }
</style>
{% assign s = section.settings %}
<section class="cc-mm-hero-section" id="cc-mm-hero-section">
  <div class="cc-mm-hero-row">
    <div class="page-width">
      <div class="cc-mm-hero-wrap">
        <div class="cc-mm-hero-text">
          <img src="https://cdn.shopify.com/s/files/1/0350/8253/files/white.png?v=1748369259" width="183px" class="desktop"/>
          {% if s.heading != blank %}
            <h3>{{ s.heading }}</h3>
          {% endif %}
          {% if s.description != blank %}
            {{ s.description }}
          {% endif %}
          {% unless customer %}
            <div class="cc-mm-hero-buttons">
               {% if s.button_secondary_text %}
                <a href="#" class="cc-secondary-button SSO_popup_register">{{ s.button_secondary_text }}</a>
              {% endif %}
              {% if s.button_primary_text %}
                <a href="#" class="cc-primary-button SSO_popup_login">{{ s.button_primary_text }}</a>
              {% endif %}
            </div>
            {% endunless %}
        </div>
        <div class="cc-mm-hero-image">
          <img src="https://cdn.shopify.com/s/files/1/0350/8253/files/white.png?v=1748369259" width="183px" class="mbl"/>
          {% if s.image_banner != blank %}
          <img src="{{ s.image_banner | img_url:'master' }}" alt="Banner Image" class="img-responsive" />
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cc-mm-instant-saving-wrap h3{
    color: #2D2E34;
  }
    .wrapper.main-content {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
    }
    .top_container {
        background: #F7F7F7;
        padding: 50px 0 0 0;
        text-align: center;
    }
    .inner_grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        max-width: 990px; 
        margin: 0 auto;
    } 
    .inner_grid img{
            max-width: 460px;
    margin: 0 auto;
    } 
    .inner_grid h2{
        text-transform: capitalize;
        color: #191919;
        text-align: center;
        font-size: 29px; 
        margin: 0;
    }
    .inner_grid span{
      display: block;
      font-size: 18px;
      padding: 20px 0;
    }
    .inner_grid i{
      color: #E1251C;
      font-style: normal;    font-weight: 700;
    }
    .inner_grid .cc-primary-button{
      border-color: 1px solid var(--color-red-500, #e1251c);
      background: var(--color-red-500, #e1251c);
    }
    .curve_bottom_desktop{
        position: relative;
        bottom: -15px;
        width: 100%;
    }
    .curve_bottom_mobile{
        display: none;
    }
    @media only screen and (max-width: 768px) {
        .top_container { 
          margin-bottom: 50px;
        }
        .inner_grid {
            grid-template-columns: 1fr;
            text-align: center;
        }
        .inner_grid img{
            max-width: 75%;
            margin: 0 auto 30px;
        }
        .inner_grid h1{
            font-size: 40px;
            text-align: center;
        }
        .curve_bottom_desktop{
            display: none;
        }
        .curve_bottom_mobile{
            display: block;
            width: 100%;
            position: relative;
            bottom: -35px;
        } 
    }
</style>
<div class="top_container">
