<style>
  .heading-section {
    text-align: center;
}

.heading-section h1 {
    font-size: 2.5rem;
    margin: 0 0 10px;
}

.heading-section p {
    font-size: 1rem;
    color: #666;
}

</style>
<div class="heading-section">
  <div class="container"  style="background-color: {{ section.settings.background_color }};padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
     <h1 style="color: {{ section.settings.heading_text_color }};">{{ section.settings.heading_text }}</h1>
    <p>{{ section.settings.heading_description }}</p>
  </div>
</div>

{% schema %}
{
  "name": "<> Heading Section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "heading_description",
      "label": "Heading Description",
      "default": "Find the best products and deals here!"
    },
    {
      "type": "color",
      "id": "heading_text_color",
      "label": "Heading Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Heading Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}


